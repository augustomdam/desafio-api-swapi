<!DOCTYPE html>
<html>
  <head>
    <title>DesafioApi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Desafio API</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to "Home", "/", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Pessoas", "/pessoas", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Planetas", "/planetas", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Filmes", "/filmes", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Espécies", "/especies", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Veículos", "/veiculos", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Naves Estelares", "/naves_estelares", class: "nav-link" %>
          </li>
          <li class="nav-item ">
            <%= link_to "Lista de Favoritos", "/favoritos", class: "nav-link" %>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
